<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:colorPrimary">@color/material_deep_orange_500</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/material_deep_orange_400</item>
        <item name="android:textColor">@color/material_deep_orange_50</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">222dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Red" parent="Button">
        <item name="android:background">@color/material_red_500</item>
        <item name="android:textColor">@color/material_red_50</item>
    </style>

    <color name="material_amber_500">#FFC107</color>
    <color name="material_deep_orange_50">#FBE9E7</color>
    <color name="material_deep_orange_400">#FF7043</color>
    <color name="material_deep_orange_500">#FF5722</color>
    <color name="material_red_50">#FFEBEE</color>
    <color name="material_red_500">#F44336</color>

</resources>
